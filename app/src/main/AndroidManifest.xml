<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="es.ujaen.ejemplostema2">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">


        <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
        <uses-permission android:name="android.permission.INTERNET"/>
        <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>
        <uses-permission android:name="android.permission.CHANGE_NETWORK_STATE"/>
        <uses-permission android:name="android.permission.CHANGE_WIFI_STATE"/>
        <uses-permission android:name="android.permission.ACCESS_WIFI_STATE"/>

        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>



        <activity android:name="com.example.menu.Settings" android:label="@string/title_activity_menus" android:theme="@style/AppTheme"></activity>
        <activity android:name="com.example.menu.Graficos" android:label="@string/app_graficos" android:theme="@style/AppTheme"></activity>
        <activity android:name="com.example.menu.Help" android:label="@string/app_help" android:theme="@style/AppTheme"></activity>
        <activity android:name=".FragmentAlmacenamiento" android:label="@string/app_ficheros" android:theme="@style/AppTheme"></activity>
        <activity android:name="com.example.menu.Fragmentos" android:label="@string/app_fragments" android:theme="@style/AppTheme"></activity>
        <activity android:name="com.example.menu.FragmentosDinamicos" android:label="@string/app_fragments_dinamicos" android:theme="@style/AppTheme"></activity>
        <activity android:label="@string/app_networking" android:name="com.example.menu.Network" android:theme="@style/AppTheme"></activity>
        <activity android:name="com.example.menu.Connectivity" android:label="@string/app_connectivity" android:theme="@style/AppTheme"></activity>
        <activity android:name="com.example.menu.ProviderUse" android:label="@string/app_provideruse" android:theme="@style/AppTheme"></activity>


        <service android:label="@string/service_download" android:name="com.example.menu.Download" ></service>

        <provider android:name="com.example.menu.RecordContentProvider"
            android:authorities="uja.epsl.aaptm.android.contentproviders" android:exported="true" android:enabled="true"/>

    </application>

</manifest>